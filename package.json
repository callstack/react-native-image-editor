{
  "name": "@react-native-community/image-editor",
  "version": "2.3.0",
  "description": "React Native Image Editing native modules for iOS & Android",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index.ts",
  "source": "src/index.ts",
  "author": "Dawid Urbaniak <dawidu@onet.pl>",
  "contributors": [],
  "homepage": "https://github.com/callstack/react-native-image-editor#readme",
  "bugs": {
    "url": "https://github.com/callstack/react-native-image-editor/issues"
  },
  "license": "MIT",
  "keywords": [
    "react-native",
    "react native",
    "image editor",
    "imageeditor",
    "image"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/callstack/react-native-image-editor.git"
  },
  "files": [
    "src",
    "lib",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "typings",
    "android",
    "ios",
    "react-native-image-editor.podspec",
    "!android/build",
    "!ios/build"
  ],
  "scripts": {
    "ts": "yarn tsc --noEmit",
    "lint": "eslint '**/*.{js,ts,tsx}'",
    "release": "release-it",
    "build": "rm -rf lib/* && bob build && prettier --write ./lib",
    "prepublishOnly": "yarn run build"
  },
  "peerDependencies": {
    "react": ">=16.0.0",
    "react-native": ">=0.57.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-native": {
      "optional": true
    }
  },
  "devDependencies": {
    "@react-native/eslint-config": "^0.74.0",
    "@react-native/typescript-config": "^0.74.0",
    "@typescript-eslint/parser": "^6.9.1",
    "eslint": "^8.53.0",
    "metro-react-native-babel-preset": "0.76.8",
    "prettier": "^2.8.8",
    "react": "^18.2.0",
    "react-native": "^0.72.6",
    "react-native-builder-bob": "^0.23.1",
    "react-native-test-app": "^2.5.32",
    "release-it": "^10.3.1",
    "typescript": "^5.2.2"
  },
  "eslintConfig": {
    "extends": "@react-native"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": false,
    "jsxBracketSameLine": true
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ]
}
